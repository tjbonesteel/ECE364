# The script keeps the button on the left side of
# the window when expanded and fills in both X and Y direction
# No expand option

# Note:  Expands only in Y direction

from Tkinter import *
import sys

Root = Tk()
Root.title(sys.argv[0])

My_Label = Label(Root, text = '1G: Hello EE 364 Students',
                       fg="Blue", # foreground color
                       bg="light green", # background color
                       font=("courier", 24, "bold"))
My_Label.pack(side=LEFT, fill=BOTH)
Root.mainloop()

